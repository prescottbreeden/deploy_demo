@using wedding_planner.Models
@model LoginUser

<div class="login">
  <h2>Log in</h2>
  <p>Moose bites can be pretti nasti</p>
  <form asp-action="Login" asp-controller="Home" class="form">
    <div class="form__row">
      <label asp-for="LogEmail" class="form__label">Email:</label>
      <input asp-for="LogEmail" class="form__input">
    </div>
    <div class="form__row">
      <label asp-for="LogPassword" class="form__label">Password:</label>
      <input asp-for="LogPassword" class="form__input">
    </div>
    <button>Submit</button>
  </form>
  <div class="errors">
    <span asp-validation-for="LogEmail"></span>
    <span asp-validation-for="LogPassword"></span>
    <span asp-validation-for="ValidationMessage"></span>
  </div>
</div>